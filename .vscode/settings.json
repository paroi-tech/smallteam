{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrapColumn": 132,
  "editor.wordWrap": "wordWrapColumn",
  "editor.rulers": [120],
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.monk": "html"
  },
  // "git.autofetch": false,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "search.exclude": {
    "**/*.map": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "www-server/backend": true,
    "www-server/isomorphic": true,
    "www-server/*.sqlite": true,
    "www-server/www/bundle*.js*": true,
    "www-server/www/smallteam.css": true,
    "www-server/www/**/*.min.*": true
  },
  // "search.useIgnoreFiles": false,
  "typescript.locale": "en"
}