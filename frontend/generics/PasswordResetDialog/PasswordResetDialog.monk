<dialog class="PasswordResetDialog">
  <p>
    Please enter the email address you have been registered with.<br>
    An email with a link to reset the password will be sent to that address.
  </p>
  <div>
    <input type="email" :ref="email" required>
    <button type="button" :ref="submit">
      Request email
      <span class="fas fa-spin fa-spinner fa-1x" style="display: none" :ref="spinner"></span>
    </button>
    <button type="button" :ref="cancel">Cancel</button>
  </div>
</dialog>
