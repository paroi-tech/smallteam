{
  "name": "smallteam",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "team:sass": "node-sass --recursive --source-map-embed --output-style expanded -o dist/www/ src/frontend-team",
    "_team:sass:watch": "node-sass --watch --recursive --source-map-embed --output-style expanded src/frontend-team/ -o dist/www/",
    "team:sass:watch": "run-s team:sass _team:sass:watch",
    "team:webpack": "webpack --config src/frontend-team/webpack.config.js",
    "team:webpack:watch": "webpack --watch --config src/frontend-team/webpack.config.js",
    "reg:sass": "node-sass --recursive --source-map-embed --output-style expanded -o dist/www/ src/frontend-registration",
    "_reg:sass:watch": "node-sass --watch --recursive --source-map-embed --output-style expanded src/frontend-registration/ -o dist/www/",
    "reg:sass:watch": "run-s reg:sass _reg:sass:watch",
    "reg:webpack": "webpack --config src/frontend-registration/webpack.config.js",
    "reg:webpack:watch": "webpack --watch --config src/frontend-registration/webpack.config.js",
    "platform:sass": "node-sass --recursive --source-map-embed --output-style expanded -o dist/www/ src/frontend-platform",
    "_platform:sass:watch": "node-sass --watch --recursive --source-map-embed --output-style expanded src/frontend-platform/ -o dist/www/",
    "platform:sass:watch": "run-s platform:sass _platform:sass:watch",
    "platform:webpack": "webpack --config src/frontend-platform/webpack.config.js",
    "platform:webpack:watch": "webpack --watch --config src/frontend-platform/webpack.config.js",
    "all:sass": "run-s team:sass reg:sass platform:sass",
    "all:sass:watch": "run-p team:sass:watch reg:sass:watch platform:sass:watch",
    "all:webpack": "run-s team:webpack reg:webpack platform:webpack",
    "all:webpack:watch": "run-p team:webpack:watch reg:webpack:watch platform:webpack:watch",
    "_backend:rm": "rimraf dist/backend dist/shared",
    "_backend:tsc": "tsc --project src/backend/",
    "_backend:tsc:watch": "tsc --watch --project src/backend/",
    "backend:tsc": "run-s _backend:rm _backend:tsc",
    "backend:tsc:watch": "run-s _backend:rm _backend:tsc:watch",
    "backend:nodemon": "nodemon --watch dist/backend --watch dist/shared --watch config.json dist/backend/ -- --config config.json",
    "_backend:wait": "just-wait -p \"dist/backend/index.js\" -d 500",
    "_backend:wait-then-nodemon": "run-s _backend:wait backend:nodemon",
    "_backend:tsc-start": "run-s backend:tsc start",
    "start": "node dist/backend/ --config config.json",
    "build": "run-s all:sass all:webpack backend:tsc",
    "watch": "run-p all:sass:watch all:webpack:watch backend:tsc:watch _backend:wait-then-nodemon",
    "watch:light": "run-p sass:watch webpack:watch _backend:tsc-start",
    "postwatch": "node -e \"console.log()\"",
    "lint:fix": "tslint --fix src/**/*.ts -t verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fabtom/smallteam.git"
  },
  "author": "fabtom",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/fabtom/smallteam/issues"
  },
  "homepage": "https://github.com/fabtom/smallteam#readme",
  "dependencies": {
    "@fabtom/media-engine": "0.4.2",
    "bcrypt": "3.0.0",
    "bristol": "0.4.0",
    "connect-sqlite3": "0.9.11",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "joi": "13.6.0",
    "monkberry": "4.0.8",
    "monkberry-directives": "4.0.8",
    "monkberry-events": "4.0.8",
    "monkberry-loader": "4.0.9",
    "mycn-sqlite3": "0.2.1",
    "mycn-with-sql-bricks": "0.12.0",
    "nodemailer": "4.6.8",
    "sql-bricks": "2.0.3",
    "sql-bricks-sqlite": "0.1.0",
    "uuid": "3.3.2",
    "ws": "6.0.0"
  },
  "devDependencies": {
    "@fabtom/lt-monkberry": "^0.2.1",
    "@types/express": "4.16.0",
    "@types/express-session": "1.15.11",
    "@types/joi": "13.4.4",
    "@types/node": "8.10.29",
    "@types/nodemailer": "4.6.5",
    "@types/showdown": "1.7.5",
    "@types/sortablejs": "1.3.32",
    "@types/sql-bricks": "2.0.1",
    "@types/uuid": "3.4.4",
    "@types/ws": "6.0.1",
    "bkb": "0.27.6",
    "html-loader": "0.5.5",
    "just-wait": "1.0.11",
    "node-sass": "4.9.3",
    "nodemon": "1.18.4",
    "npm-run-all": "4.1.3",
    "rimraf": "2.6.2",
    "showdown": "1.8.6",
    "sortablejs": "1.7.0",
    "ts-loader": "5.1.0",
    "tslint": "^5.11.0",
    "typescript": "3.0.3",
    "webpack": "4.19.0",
    "webpack-cli": "3.1.0"
  }
}
