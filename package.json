{
  "name": "smallteam",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "sass": "node-sass --recursive --source-map-embed --output-style expanded frontend/ -o www-server/www/",
    "_sass:watch": "node-sass --watch --recursive --source-map-embed --output-style expanded frontend/ -o www-server/www/",
    "sass:watch": "run-s sass _sass:watch",
    "webpack": "webpack --config frontend/webpack.config.js",
    "webpack:watch": "webpack --watch --config frontend/webpack.config.js",
    "webpack-pwd": "webpack --config frontend-pwd/webpack.config.js",
    "webpack-pwd:watch": "webpack --watch --config frontend-pwd/webpack.config.js",
    "_backend-rm": "rimraf www-server/backend www-server/isomorphic",
    "_backend-tsc": "tsc --project backend/",
    "_backend-tsc:watch": "tsc --watch --project backend/",
    "backend-tsc": "run-s _backend-rm _backend-tsc",
    "backend-tsc:watch": "run-s _backend-rm _backend-tsc:watch",
    "server:run": "node www-server/backend/",
    "server:watch": "nodemon --watch www-server/backend --watch www-server/isomorphic www-server/backend/",
    "build": "run-s sass webpack backend-tsc",
    "_server:wait": "just-wait -p \"www-server/backend/index.js\" -d 500",
    "_server:wait-then-watch": "run-s _server:wait server:watch",
    "_server:tsc-run": "run-s backend-tsc server:run",
    "watch": "run-p sass:watch webpack:watch webpack-pwd:watch backend-tsc:watch _server:wait-then-watch",
    "watch:light": "run-p sass:watch webpack:watch _server:tsc-run"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fabtom/smallteam.git"
  },
  "author": "fabtom",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/fabtom/smallteam/issues"
  },
  "homepage": "https://github.com/fabtom/smallteam#readme",
  "dependencies": {
    "bcrypt": "1.0.3",
    "bkb": "0.19.0",
    "connect-sqlite3": "0.9.10",
    "express": "4.16.2",
    "express-session": "1.15.6",
    "monkberry": "4.0.8",
    "monkberry-directives": "4.0.8",
    "monkberry-events": "4.0.8",
    "multer": "1.3.0",
    "nodemailer": "4.4.1",
    "sharp": "0.19.0",
    "showdown": "1.8.5",
    "sortablejs": "1.7.0",
    "sqlite": "2.9.0",
    "sqlite3": "3.1.13"
  },
  "devDependencies": {
    "@types/express": "4.0.39",
    "@types/express-session": "1.15.6",
    "@types/multer": "1.3.6",
    "@types/nodemailer": "4.3.1",
    "@types/sharp": "0.17.6",
    "@types/showdown": "1.7.2",
    "html-loader": "0.5.1",
    "just-wait": "1.0.11",
    "monkberry-loader": "4.0.8",
    "node-sass": "4.7.2",
    "nodemon": "1.13.3",
    "npm-run-all": "4.1.2",
    "rimraf": "2.6.2",
    "ts-loader": "3.2.0",
    "typescript": "2.6.2",
    "webpack": "3.10.0"
  }
}
