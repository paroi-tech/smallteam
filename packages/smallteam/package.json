{
  "name": "smallteam",
  "version": "0.0.2",
  "license": "CC0-1.0",
  "description": "A rudimentary Task Management Software for Small Teams.",
  "author": "Paroi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paroi-tech/smallteam.git"
  },
  "homepage": "https://github.com/paroi-tech/smallteam",
  "scripts": {
    "prepack": "pnpm run lint && pnpm run build:prod && node scripts/switch-bundled-packages-to-tarballs.js",
    "postpack": "node scripts/switch-bundled-packages-to-versions.js",
    "start": "node dist/",
    "build:prod": "pnpm run clear && pnpm run typeonly && pnpm run tsc:prod",
    "build": "pnpm run clear && pnpm run typeonly && pnpm run tsc",
    "serve": "pnpm run clear && pnpm run typeonly && pnpm run _serve",
    "_serve": "run-p tsc:watch _wait-then-nodemon",
    "typeonly": "typeonly --bundle dist/types.to.json src/utils/configuration-types.d.ts",
    "clear": "rimraf dist/*",
    "clear:prod": "rimraf static-bundles-prod/*",
    "tsc": "tsc",
    "tsc:prod": "tsc --sourceMap false",
    "tsc:watch": "tsc --watch --preserveWatchOutput",
    "_nodemon": "nodemon --watch dist --watch ../shared --watch config.json dist/index.js -- --config config.json",
    "_wait": "just-wait -p \"dist/index.js\" -d 500",
    "_wait-then-nodemon": "run-s _wait _nodemon",
    "lint": "eslint . --ext .ts --max-warnings=0"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@ladc/sql-bricks-modifier": "^0.22.7",
    "@ladc/sqlite3-adapter": "^0.22.8",
    "@paroi/media-engine": "^0.5.4",
    "@smallteam-local/shared": "0.0.0-bundled",
    "@typeonly/validator": "^0.5.1",
    "bcrypt": "^5.0.0",
    "bkb": "^0.28.2",
    "connect-sqlite3": "^0.9.11",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "ladc": "^0.22.10",
    "nodemailer": "^6.4.10",
    "pino": "^6.3.2",
    "pino-pretty": "^4.0.0",
    "sql-bricks": "^2.0.5",
    "sql-bricks-sqlite": "^0.1.0",
    "uuid": "^8.2.0",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/hapi__joi": "^17.1.3",
    "@types/node": "^12.12.47",
    "@types/nodemailer": "^6.4.0",
    "@types/pino": "^6.3.0",
    "@types/sql-bricks": "^2.0.1",
    "@types/uuid": "^8.0.0",
    "@types/ws": "^7.2.5",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "just-wait": "^1.0.11",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sass": "^1.26.9",
    "typeonly": "^0.4.1",
    "typescript": "^3.9.5"
  },
  "bin": "dist/index.js",
  "files": [
    "dist",
    "sql-scripts",
    "static",
    "static-bundles-prod",
    "config.prod.json"
  ]
}
