<div class="TaskCommentEditor">
  <header class="TaskCommentEditor-header">Comments</header>
  <ul class="TaskCommentEditor-ul" :ref="ul"></ul>
  <div>
    <textarea class="TaskCommentEditor-textarea" rows="10" cols="25" :ref="textarea"></textarea>
    <button class="StdBtn WithLoader -right" type="button" :ref="submit">
      Save comment
      <span class="WithLoader-l" hidden :ref="spinner"></span>
    </button>
  </div>
</div>
