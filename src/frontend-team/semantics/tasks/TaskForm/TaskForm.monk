<div class="TaskForm" hidden>
  <fieldset :ref="fieldset">
    <header class="TitleBar2">
      {{ code }}
      <span class="LoaderBg" hidden :ref="spinner"></span>
    </header>

    <div class="FieldGroup">
      <label class="FieldGroup-item Field">
        <span class="Field-lbl">Label</span>
        <input class="Field-input" type="text" value="{{ label }}" :ref="label">
      </label>

      <label class="FieldGroup-item Field">
        <span class="Field-lbl">Description</span>
        <textarea class="Field-input -textarea" value="{{ description }}" rows="4" placeholder="Task description" :ref="description">
        </textarea>
      </label>

      <div class="FieldGroup-item" :ref="flag"></div>
      <div class="FieldGroup-item" :ref="account"></div>

      <div class="FieldGroup-action">
        <button class="Btn WithLoader -right" type="button" :ref="submit">
          Submit <span class="WithLoader-l" hidden :ref="submitSpinner"></span>
        </button>

        {% if showArchiveBtn %}
        <button class="Btn" type="button" :ref="btnArchive">Archive task</button>
        {% endif %}

        {% if showPostponeBtn %}
        <button class="Btn" type="button" :ref="btnPostpone">
            {% if activeTask %} Postpone {% else %} Activate {% endif %}
        </button>
        {% endif %}
      </div>

      <div class="FieldGroup-item" :ref="comment"></div>
      <div class="FieldGroup-item" :ref="attachment"></div>

      <div class="FieldGroup-action">
        <button class="Btn" :ref="btnToggle">Show/Hide as parent</button>
        <button class="Btn" :ref="btnLog">Show logs</button>
        <button class="Btn" :ref="btnCommits">Show commits</button>
      </div>

      <div class="FieldGroup-action">
        <button class="Btn WithLoader -right" :ref="btnDelete">
          Delete task <span class="WithLoader-l" hidden :ref="deleteSpinner"></span>
        </button>
      </div>
    </div>
  </fieldset>

  <div :ref="picker"></div>
</div>
